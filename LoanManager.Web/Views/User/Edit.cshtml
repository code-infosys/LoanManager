@model LoanManager.Models.User

<link href="~/theme/datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="~/theme/datepicker/bootstrap-datepicker.min.js"></script>
<script src="~/theme/bower_components/ckeditor/ckeditor.js"></script>
<link href="~/timepicker/timepicker.min.css" rel="stylesheet" />
<script src="~/timepicker/timepicker.min.js"></script>
<link href="~/clockpicker/bootstrap-clockpicker.min.css" rel="stylesheet" />
<script src="~/clockpicker/jquery-clockpicker.min.js"></script>
<link href="~/datetimepicker/jquery.datetimepicker.min.css" rel="stylesheet" />
<script src="~/datetimepicker/jquery.datetimepicker.full.min.js"></script> 
@Html.AjaxFormSubmiterV2("myForm", "tbUser", true,  Localizer["ActionSuccess"].Value)

<form id="myForm" asp-action="Edit" role="form" enctype="multipart/form-data">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = Localizer["FillRequired"].Value })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="UserName" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="UserName" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="RoleId" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="RoleId" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DateAdded" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input type="text" asp-for="DateAdded" class="form-control" />
                        <script>$(function () { $('#DateAdded').datepicker({ autoclose: true }); });</script>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DateModified" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input type="text" asp-for="DateModified" class="form-control" />
                        <script>$(function () { $('#DateModified').datetimepicker({ format:'m/d/Y H:i' }); });</script>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="FullName" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="MobileNumber" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="MobileNumber" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IsActive" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="IsActive" style="margin-top:10px" type="checkbox" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ChangePasswordCode" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="ChangePasswordCode" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IsConfirm" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="IsConfirm" style="margin-top:10px" type="checkbox" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="OnTime" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="OnTime" class="form-control" /> 
                        <script>$(function () { $('#OnTime').timepicker({ showInputs: false }); });</script>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ClockTest" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="ClockTest" class="form-control" />
                        <script>$(function () { $('#ClockTest').clockpicker({ autoclose: true }); });</script>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="About" class="col-lg-4 col-sm-6 control-label"></label>
                    <div class="col-lg-6">
                        <textarea asp-for="About" class="form-control ckeditor"></textarea>
                        <script>$(function () { CKEDITOR.instances["About"].destroy(); CKEDITOR.replace('About'); });</script>
                    </div>
                </div>

            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { CancelButtonText = Localizer["Cancel"].Value, SubmitButtonText = Localizer["Submit"].Value })
</form>
